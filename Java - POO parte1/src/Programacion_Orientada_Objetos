		        this.atributo2 = atributo2;
		        this.atributo3 = atributo3;
		        this.atributo4 = atributo4;
		    }



	    // METODOS
		    public void id_procedimiento(){
		        ....
		        Bloque de Codigo
		        ...
		    }

			public String id_funcion(){
		    ....
		    Bloque de Codigo
		    ...
		    return (string);
		    }

